---
import Layout, { PageType } from "../layouts/Layout.astro";
const hasOverflow = true;

const page: PageType = "contact";
---

<Layout hasOverflow={hasOverflow} page={page} title='Contact'>
    <div class="flex items-center justify-center overflow-hidden h-screen p-8">
        <div class="mx-auto w-full max-w-[550px]">
        <h1 class="shadow-underline block uppercase font-raleway font-bold">Contact me</h1>
        <p class="">
            I'm currently looking for a <b>new job</b>. If you're interested in hiring me, please
        </p>
            <form 
                class="form-group mt-4"
                action="https://formbold.com/s/3dYGo"
                method="POST"
            >
                <div class="-mx-3 flex flex-wrap">
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                            for="name"
                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                            >Name</label>
                            <input
                            autofocus
                            id="name"
                            type="text"
                            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight inputs-focus"
                            name="name"
                            placeholder="Your name"
                            autocomplete="off"
                            required
                            />
                            
                        </div>
                    </div>
                    <div class="w-full px-3 sm:w-1/2">
                        <div class="mb-5">
                            <label
                                for="email"
                                class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                                >Email</label
                            >
                            <input
                                id="email"
                                type="email"
                                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight inputs-focus"
                                name="email"
                                autocomplete="off"
                                placeholder="Your email"
                                required
                            />
                        </div>
                    </div>
                </div>
                <div class="mb-5">
                    <label
                        for="message"
                        class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                        >Message</label
                    >
                    <textarea
                        id="message"
                        class="textarea-resize appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight inputs-focus"
                        name="message"
                        placeholder="Your message"
                        rows="8"
                        autocomplete="off"
                        maxlength="800"
                        minlength="10"
                        required
                    ></textarea>
                </div>

                <div class="flex items-center justify-between">
                    <button
                        class="font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline btn-color"
                        type="submit"
                    >
                        Send
                    </button>
                </div>

            </form>
        </div>
    </div>

    <style>

        .btn-color {
            background-color: var(--hot-red);
            color: #fff;
        }

        .btn-color:hover {
            color: var(--hot-red);
            background-color: #fff;
            scale: 1.1;

        }

        .textarea-resize {
            resize: none;
        }

        .inputs-focus:focus {
            border-color: var(--hot-red);
            outline: 10px solid transparent;
            outline-offset: 10px;
        }

        .shadow-underline {
            color: #fff;
            animation: .3s 1s text-shadow-reveal forwards;
        }

        @keyframes text-shadow-reveal {
            from {
                text-shadow: 0 0 0 var(--hot-red);
            }
            to {
                text-shadow: 4px 4px 0 var(--hot-red);
            }
        }

    </style>
</Layout>

